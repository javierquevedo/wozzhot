<div id="logo"> </div>
<div id="search_form">
<% form_for :tag, :url => {:controller => "build", :action => "intermediate"} do |f| %>
     <%= f.text_field :title %>
        <%= submit_tag "Wazhot?" %>
<% end %>
</div>
<div id="all_results"> 
      <% if @tag %>
        There are <%= @tag.items.count %> popular items about <b><%= @tag.title %></b> right <b>now!</b>
          <% @available_categories.each do |service|%>
                <% if @tag.items.exists?(:category => service)  %>
        <div id="service_results">
          <h1><%= service.capitalize! %> </h1>
          <%= render :partial => @tag.items.find_all_by_category(service) %>
        </div>
  
             <% end %>
        <% end %>
<% end %>
       
</div>

